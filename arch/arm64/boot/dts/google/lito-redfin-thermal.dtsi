&thermal_zones {
	skin-therm-adc {
		polling-delay-passive = <5000>;
		polling-delay = <0>;
		thermal-governor = "step_wise";
		thermal-sensors = <&pm8150l_adc_tm ADC_AMUX_THM1_PU2>;
		wake-capable-sensor;
		trips {
			skin_light_lv1: skin-light-lv1 {
				temperature = <36000>;
				hysteresis = <1000>;
				type = "passive";
			};
			skin_light_lv2: skin-light-lv2 {
				temperature = <38000>;
				hysteresis = <1000>;
				type = "passive";
			};
			skin_light_lv3: skin-light-lv3 {
				temperature = <40000>;
				hysteresis = <1000>;
				type = "passive";
			};
			skin_moderate_lv1: skin-moderate-lv1 {
				temperature = <41000>;
				hysteresis = <1000>;
				type = "passive";
			};
			skin_moderate_lv2: skin-moderate-lv2 {
				temperature = <42000>;
				hysteresis = <1000>;
				type = "passive";
			};
			skin_severe: skin-severe {
				temperature = <43000>;
				hysteresis = <1000>;
				type = "passive";
			};
			skin_critical: skin-critical {
				temperature = <44000>;
				hysteresis = <1000>;
				type = "passive";
			};
		};
		cooling-maps {
			/* skin thermal light throttling level 1 */
			wired-charge-throttling-ibat-3500mA {
				trip = <&skin_light_lv1>;
				cooling-device =
					<&google_charger 1 1>;
			};
			/* skin thermal light throttling level 2 */
			wired-charge-throttling-ibat-3000mA {
				trip = <&skin_light_lv2>;
				cooling-device =
					<&google_charger 2 2>;
			};
			/* skin thermal light throttling level 3 */
			cpu7-light-throttling {
				trip = <&skin_light_lv3>;
				cooling-device =
					<&CPU7 1 1>;
			};
			wired-charge-throttling-ibat-2500mA {
				trip = <&skin_light_lv3>;
				cooling-device =
					<&google_charger 3 3>;
			};
			wireless-charge-throttling-iusb-500mA {
				trip = <&skin_light_lv3>;
				cooling-device =
					<&google_wlc_charger 1 1>;
			};
			/* skin thermal moderate throttling level 1 */
			cpu6-moderate-throttling-lv1 {
				trip = <&skin_moderate_lv1>;
				cooling-device =
					<&CPU6 1 2>;
			};
			cpu7-moderate-throttling-lv1 {
				trip = <&skin_moderate_lv1>;
				cooling-device =
					<&CPU7 2 4>;
			};
			/* skin thermal moderate throttling level 2 */
			cpu0-moderate-throttling-lv2 {
				trip = <&skin_moderate_lv2>;
				cooling-device =
					<&CPU0 1 2>;
			};
			cpu6-moderate-throttling-lv2 {
				trip = <&skin_moderate_lv2>;
				cooling-device =
					<&CPU6 2 3>;
			};
			cpu7-moderate-throttling-lv2 {
				trip = <&skin_moderate_lv2>;
				cooling-device =
					<&CPU7 4 5>;
			};
			wired-charge-throttling-ibat-1500mA {
				trip = <&skin_moderate_lv2>;
				cooling-device =
					<&google_charger 4 4>;
			};
			wireless-charge-throttling-iusb-250mA {
				trip = <&skin_moderate_lv2>;
				cooling-device =
					<&google_wlc_charger 2 2>;
			};
			/* thermal severe throttling */
			cpu0-severe-throttling {
				trip = <&skin_severe>;
				cooling-device =
					<&CPU0 3 3>;
			};
			cpu6-severe-throttling {
				trip = <&skin_severe>;
				cooling-device =
					<&CPU6 4 4>;
			};
			cpu7-severe-throttling {
				trip = <&skin_severe>;
				cooling-device =
					<&CPU7 6 6>;
			};
			wired-charge-throttling-ibat-500mA {
				trip = <&skin_severe>;
				cooling-device =
					<&google_charger 5 5>;
			};
			wireless-charge-throttling-iusb-110mA {
				trip = <&skin_severe>;
				cooling-device =
					<&google_wlc_charger 3 3>;
			};
			/* themal critical throttling */
			cpu0-critical-throttling {
				trip = <&skin_critical>;
				cooling-device =
					<&CPU0 4 4>;
			};
			cpu6-critical-throttling {
				trip = <&skin_critical>;
				cooling-device =
					<&CPU6 5 5>;
			};
			cpu7-critical-throttling {
				trip = <&skin_critical>;
				cooling-device =
					<&CPU7 7 7>;
			};
			gpu-critical-throttling {
				trip = <&skin_critical>;
				cooling-device =
					<&msm_gpu 1 1>;
			};
			wired-charge-disabled {
				trip = <&skin_critical>;
				cooling-device = <&google_charger
					THERMAL_MAX_LIMIT THERMAL_MAX_LIMIT>;
			};
			wireless-charge-disabled {
				trip = <&skin_critical>;
				cooling-device = <&google_wlc_charger
					THERMAL_MAX_LIMIT THERMAL_MAX_LIMIT>;
			};
		};
	};

